@model IEnumerable<ClassLibrary.Models.UserModel>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h1><i class="fas fa-users"></i> Lista de Usuários</h1>

<p>
    <a asp-action="Create"><button class="btn btn-secondary">Adicionar Usuário</button></a>
</p>

<table class="table table-hover table-striped">
  <thead>
    <tr class="table-primary text-center">
      <th scope="col">@Html.DisplayNameFor(model => model.UsrNome)</th>
      <th scope="col">@Html.DisplayNameFor(model => model.UsrSbnome)</th>
      <th scope="col">@Html.DisplayNameFor(model => model.UsrEmail)</th>
      <th scope="col">Detalhes</th>
      <th scope="col">Deletar</th>
    </tr>
  </thead>
  <tbody>

      @foreach (var item in Model) {
        <tr>
          <th scope="row">@Html.DisplayFor(modelItem => item.UsrNome)</th>
          <td>@Html.DisplayFor(modelItem => item.UsrSbnome)</td>
          <td>@Html.DisplayFor(modelItem => item.UsrEmail)</td>
          <td class="text-center"><a class="detail" data-toggle="modal" data-target="#divModal" data-id="@item.UsrId"><i class="fas fa-info text-info"></i></a></td>
          <td class="text-center"><i class="far fa-trash-alt text-danger"></i></td>
        </tr>
        }

  </tbody>
</table>

<div id="divModal" class="modal fade" role="dialog" />

@section scripts{
    <script>
        $(function () {

            $(".detail").click(function () {

                var id = $(this).attr("data-id");

                $("#divModal").load("../User/GetUser/" + id, function () {

                    $("#divModal").modal();

                })

            });

            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#divModal").load("./Acesso/Edit?id=" + id, function () {
                    $("#infoModal").modal();
                })
            });

            $(".create").click(function () {
                $("#divModal").load("./Acesso/Create", function () {
                    $("#divModal").modal();
                })
            });

            $("#divModal").on("hidden.bs.modal", function () {
                $('#divModal').removeData('.modal');
                $('#divModal .modal-header').html('');
                $('#divModal .modal-body').html('');
                $('#divModal .modal-footer').html('');
            });
        })
    </script>
}