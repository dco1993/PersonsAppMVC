@model UserModel;
@{
    Layout = null;
}

<div class="container">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-user-times"></i>&ensp;Deletar Usuário?</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>

            <div class="modal-body">

                <form id="deleteForm" asp-action="DeleteUser" method="post">
                    <input asp-for="@Model.UsrId" type="hidden"/>
                </form>
            
                <h5>Você confirma a exclusão do usuário @Model.UsrNome @Model.UsrSbnome?</h5>
                <h6>Depois de confirmada, esta ação não pode ser desfeita!</h6>

            </div>

            <div class="modal-footer">
                <input type="submit" class="btn btn-danger" form="deleteForm" value="Exluir Usuário"/>
                @*<a type="submit" class="btn btn-danger" values="">Exluir Usuário</a>*@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>
</div>